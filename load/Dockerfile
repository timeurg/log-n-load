# syntax=docker/dockerfile:1

FROM artilleryio/artillery:2.0.9 As base
ARG LOAD_TARGET
ENV LOAD_TARGET=${LOAD_TARGET}
ARG LOAD_ARRIVAL_RATE
ENV LOAD_ARRIVAL_RATE=${LOAD_ARRIVAL_RATE}
ARG LOAD_DURATION
ENV LOAD_DURATION=${LOAD_DURATION}
ARG LOAD_URL
ENV LOAD_URL=${LOAD_URL:-/}
COPY . .

FROM base As quick
CMD [ "quick"]